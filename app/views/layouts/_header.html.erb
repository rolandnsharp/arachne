<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          
          <%if current_page?(signup_path)%>
          <span><%= link_to "Arachne Writer.", root_path, class: "brand", id: "logo" %> <%= image_tag"spider.png" %></span>
          
          <% elsif params[:id] && current_page?(edit_user_path)%>
          <span><%= link_to "Arachne Writer.", user_path(@user), class: "brand", id: "logo" %> <%= image_tag"spider.png" %></span>

          <% else %>
          <span><p class="brand" id="logo">Arachne Writer.</p> <%= image_tag"spider.png" %></span>
          
          <% end %>
        </div>
       
        <div class="collapse navbar-collapse">

          <ul class="nav navbar-nav pull-right">

            <p class="navbar-text" style="color: #b52a2a;">
            <% if flash[:alert] %>
              <%= flash[:alert] %>
            <% end %>
            </p>

            <p class="navbar-text" style="color:green;">
            <% if flash[:success] %>
              <%= flash[:success] %>
            <% end %>
            </p>
           
            <p class="navbar-text" id="saved" class="navbar-text" style="display:none;">Saving...</p>
            <p class="navbar-text" id="deleted" class="navbar-text" style="display:none;">Deleting...</p>

            <% if current_user %>

           <li><p class="navbar-text" id="logged-in-text">Logged in as <%=current_user.username%> !</p></li>
           <li><%= link_to "Log Out", logout_path, 'data-no-turbolink' => true %></li>
           </ul>
           <% else %>

            </ul>

              <%= form_tag sessions_path, class: "navbar-form navbar-right", method: :post do %>
              <div class="form-group">

              <%= text_field_tag :username, nil, :class=>"form-control", :placeholder =>"Username" %>
              </div>
              <div class="form-group">
                <%= password_field_tag :password, nil, :class=>"form-control", :placeholder => "Password" %>
                </div>
                <div class="form-group">
                <%= submit_tag "Log In", class: "btn btn-success", style: "color:black;" %>
                </div>
              <!-- </form> -->
          <% end %>
          <% end %>
          
          <!-- </ul> -->
        </div><!--/.nav-collapse -->
    </div>

